<% layout("layouts/boilerplate") %>

<h3 class="page-title">Your Wishlist ❤️</h3>

<% if (listings.length === 0) { %>
  <p class="text-center text-muted">No saved listings yet.</p>
<% } else { %>
  <div class="row row-cols-lg-4 row-cols-md-2 g-4">
    <% for (let listing of listings) { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="lisclas">
          <div class="listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top" />
            <div class="card-body">
              <p class="listing-title"><b><%= listing.title %></b></p>
              <p class="listing-price">₹ <%= listing.price.toLocaleString("en-IN") %> / night</p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
<% } %>
